root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.{java,gradle}]
indent_style = space
indent_size = 4
ij_java_imports_layout=*,java,javax,org,com
ij_java_class_count_to_use_import_on_demand=999

[*.{yml,yaml,json,xml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
